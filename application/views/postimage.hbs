<!-- Error -->
<div id="error-container" class="small-container" hidden>
    <div id="comment-no-user-alert" >
        <div id="error-message" class="alert alert-danger " role="alert">
        </div>
    </div>
</div>
<!-- Image Upload -->
<div class="small-container">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <form id="post-image" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" id="titleInput" class="form-control" name="title" placeholder="Give your post a title" required >
                </div>
                <div class="form-group"> <textarea type="textarea" id="descriptionInput" class="form-control" name="description" placeholder="Describe this post" rows="3" required> </textarea>
                </div>
                <div class="form-group"> <input type="file" accept="image/*" class="form-control" name="uploadImage" id="imageFile" required >
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="termsCheck" required>
                    <label for="termsCheck" class="form-check-label"> I agree to the <a href="#" class="card-link">TOS & Privacy</a> rules.
                    </label>
                </div>
                <div class="mt-3 float-right">
                    <button type="submit" id="upload-button" class="btn btn-sm btn-outline-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>

